{{> header}}

<div class="jumbotron">
  <h1 class="display-4">Weather Info</h1>
  {{#if errorMessage}}
    <div class="alert alert-danger" role="alert">
      <p>{{errorMessage}}</p>
    </div>
  {{else}}
    <p class="lead">Its {{weather.summary}} and temprature is {{weather.temperature}} degree celcius in {{weather.address}}.</p>
  {{/if}}
  <form method="GET" action="/">
  <div class="form-row align-items-center">
    <div class="col-auto">
      <label class="sr-only" for="inlineFormInput">City</label>
      <input type="text" name="location" class="form-control mb-2" id="inlineFormInput" placeholder="{{weather.address}}">
    </div>
    <div class="col-auto">
      <button type="submit" class="btn btn-primary mb-2">Submit</button>
    </div>
  </div>
</form>
</div>

